<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
  <link href="https://unpkg.com/nes.css/css/nes.css" rel="stylesheet" />
  <link href="https://unpkg.com/blueprint-css@3.1.0/dist/blueprint.min.css" rel="stylesheet" />
  <title>Bulletin board</title>
  <style>
    .mt16 {
      margin-top: 16px;
    }
    .mt32 {
      margin-top: 32px;
    }
  </style>
</head>
<body>
<div bp="grid">
<h1 bp="offset-2 8">Bulletin board</h1>
</div>
<div bp="grid" class="mt32">
  <form action="/post" method="post" bp="5 offset-2">
    <div class="nes-field">
      <label for="name">your name</label>
      <input type="text" name="name" placeholder="your name" class="nes-input">
    </div>
    <textarea name="text" id="" cols="30" rows="10" class="nes-textarea mt16" placeholder="What are you doing now?"></textarea>
    <input type="submit" value="Submit" class="nes-btn is-primary mt16">
  </form>
  <div bp="1"></div>
  <div bp="4">
    <% if ( posts ) { %>
      <% for (var i = 0; i < posts.length; i++) { %>
      <div class="nes-container is-dark with-title">
        <h2 class="title"><%= posts[ i ].name %></h2>
        <p><%= posts[ i ].text %></p>
      </div>
      <% } %>
    <% } %>
  </div>
</div>
</body>
</html>
